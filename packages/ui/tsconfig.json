{
  "extends": "@dank/tsconfig/react-library.json",
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
