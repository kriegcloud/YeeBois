{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "dotenv -e .env.local -- turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=docs^... && changeset publish",
    "ui:add:component": "turbo ui:add --filter=@dank/ui",
    "prepare": "lefthook install",
    "dev": "turbo run dev",
    "dev:ui": "turbo dev --experimental-ui",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:push": "dotenv -e .env.local -- pnpm --dir packages/database db:push",
    "db:studio": "dotenv -e .env.local -- turbo run db:studio",
    "db:make-migrations": "dotenv -e .env.local -- turbo run db:make-migrations",
    "db:migrate": "dotenv -e .env.local -- turbo run db:migrate",
    "db:check": "dotenv -e .env.local -- turbo run db:make-migrations",
    "db:drop": "dotenv -e .env.local -- turbo run db:drop",
    "docker:nuke": "docker compose down && docker system prune -a -f && docker volume prune -a -f",
    "docker:up": "docker compose up -d",
    "docker:exec:db": "docker compose exec -it db '/bin/bash'",
    "with-env": "dotenv -e .env.local --"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.1",
    "@changesets/cli": "2.27.1",
    "lefthook": "1.6.10",
    "turbo": "latest",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-curly": "^0.2.1",
    "prettier-plugin-packagejson": "^2.5.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.10",
  "workspaces": [
    "apps/*",
    "packages/ui",
    "packages/config/*",
    "packages/services/*",
    "packages/utils/*",
    "packages/assets"
  ],
  "trustedDependencies": ["@biomejs/biome", "esbuild", "lefthook"]
}
