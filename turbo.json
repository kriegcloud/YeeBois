{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "pipeline": {
    "ui:add": {},
    "lint:fix": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "public/**",
        "next.config.js",
        "astro.config.ts",
        "postcss.config.cjs",
        "tailwind.config.ts",
        "package.json",
        "tsconfig.json"
      ],
      "env": [
        "DATABASE_URL",
        "UPLOADTHING_SECRET",
        "UPLOADTHING_APP_ID",
        "UNKEY_ROOT_KEY",
        "UNKEY_NAMESPACE",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_GOOGLE_CODE_VERIFIER"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".astro/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.cjs",
        "**/*.mjs"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.cjs",
        "**/*.mjs"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false
    },
    "db:make-migrations": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:drop": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:studio:r": {
      "cache": false
    },
    "docker:up": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalDotEnv": [".env.local"]
}
