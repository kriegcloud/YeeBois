{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "tasks": {
    "ui:add": {},
    "lint:fix": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "public/**",
        "next.config.js",
        "postcss.config.cjs",
        "tailwind.config.ts",
        "package.json",
        "tsconfig.json"
      ],
      "env": [
        "DATABASE_URL",
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".open-next/**",
        "!.open-next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "web/dist/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.cjs",
        "**/*.mjs"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.cjs",
        "**/*.mjs"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "dependsOn": ["db:make-migrations"],
      "inputs": ["migrations/**"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build", "build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "inputs": ["e2e/**", "playwright.config.ts"]
    },
    "db:make-migrations": {
      "cache": false,
      "outputs": ["migrations/**"],
      "inputs": ["src/schema/schema.ts", "drizzle-config.ts"]
    },
    "db:push": {
      "cache": false
    },
    "db:drop": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:studio:r": {
      "cache": false
    },
    "docker:up": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": [
        "src/**",
        ".storybook/**",
        "postcss.config.cjs",
        "tailwind.config.ts",
        "tsconfig.json",
        "package.json",
        "vite.config.ts"
      ]
    }
  }
}
